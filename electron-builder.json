{
    "productName": "Your App Name",
    "directories": {
      "output": "build",
      "buildResources": "public"
    },
    "files": [
        "build/**/*",
        "public/**/*",
        "src/**/*",
        "package.json",
        "public/electron.js"
    ],
    "appId": "com.yourcompany.yourapp",
    "mac": {
      "category": "your.app.category",
      "target": "dmg"
    },
    "dmg": {
        "sign": false,
        "contents": [
          {
            "x": 410,
            "y": 150,
            "type": "link",
            "path": "/Applications"
          },
          {
            "x": 130,
            "y": 150,
            "type": "file"
          }
        ]
      },
      "win": {
        "target": "nsis"
      },
      "linux": {
        "target": [
          "AppImage",
          "deb"
        ]
      },
    "publish": [
      {
        "provider": "github",
        "owner": "your-github-username",
        "repo": "your-github-repo",
        "releaseType": "draft"
      }
    ]
  }
  